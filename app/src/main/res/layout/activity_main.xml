<?xml version="1.0" encoding="utf-8"?>
<!-- Root layout for the MainActivity screen. -->
<!-- Uses RelativeLayout for flexible positioning. -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- TextView to display the number of flips made by the player. -->
    <TextView
        android:id="@+id/tvFlips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Flips: 0"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <!-- GridLayout to contain the card views. -->
    <!-- Cards will be added dynamically. -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvFlips"
        android:layout_margin="16dp"
        android:alignmentMode="alignMargins"
        android:columnCount="4"
        android:rowCount="4"
        android:padding="4dp">

    <!-- Placeholder: Card views (ImageViews or Buttons) will be added here programmatically. -->

</GridLayout>

    </RelativeLayout>
